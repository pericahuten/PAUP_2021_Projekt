@using Paup_2021_ServisVozila.Models
@model List<RacunStavke>
@{
    ViewBag.Title = "Popis stavki";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID stavke</th>
            <th>ID računa</th>
            <th>Redni broj</th>
            <th>Artikl</th>
            <th>Kolicina</th>
            <th>Iznos</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var stavka in Model)
            {
                <tr>
                    <td>@stavka.id</td>
                    <td>@(stavka.idRacuna)</td>
                    <td>@stavka.redniBroj</td>
                    <td>@(stavka.sifraArtikla)</td>
                    <td>@stavka.kolicina</td>
                    <td>@stavka.iznos</td>
                </tr>
            }
    </tbody>
</table>
