@using Paup_2021_ServisVozila.Models
@model RacunStavke
@{
    ViewBag.Title = "Potvrda brisanja stavke";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<strong>Jeste li sigurni da želite izbrisati stavku: @Model.redniBroj - @(Model.ArtiklFK?.Naziv) ?</strong>

<br />
<br />

@using (Html.BeginForm("Brisi", "RacunStavke"))
{
    @Html.AntiForgeryToken();

    <button type="submit" class="btn btn-danger">
        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Izbriši
    </button>

    <br />
    <br />

    @Html.ActionLink("Odustani", "Popis")
}
