@using Paup_2021_ServisVozila.Models
@model Automobili
@{
    ViewBag.Title = "Azuriranje automobila";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Azuriraj", "Automobili", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Ispravite podatke!");



    <div class="form-group">
        @Html.LabelFor(model => model.Vin, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Vin, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Vin, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Vlasnik.PrezimeIme, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Vlasnik.PrezimeIme, new { disabled = true, @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Proizvodac, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.Proizvodac, new SelectList(ViewBag.Marke, "id", "Marke"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Proizvodac, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Model, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Model, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Registracija, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Registracija, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Registracija, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="false"></span> Spremi
            </button>
        </div>
    </div>
}


@Html.ActionLink("Povratak bez ažuriranja", "Popis", "Automobili")