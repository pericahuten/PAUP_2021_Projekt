@using Paup_2021_ServisVozila.Misc
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PAUP Projekt Servis Vozila 2021</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default bg-primary navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Servis vozila 2021", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Automobili", "Popis", "Automobili")</li>
                    <li>@Html.ActionLink("Servisi", "Popis", "Servis")</li>
                    @if (User.Identity.IsAuthenticated &&
                    (User as LogiraniKorisnik).IsInRole(OvlastiKorisnik.Administrator))
                    {
                        <li>@Html.ActionLink("Dodaj Model", "DodajMarku", "MarkeAutomobili")</li>
                        <li>@Html.ActionLink("Korisnici", "Popis", "Korisnici")</li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink((User as LogiraniKorisnik).PrezimeIme, "Index", "Home")</li>
                        <li>@Html.ActionLink("Odjava", "Odjava", "Korisnici")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Registracija", "Registracija", "Korisnici")</li>
                        <li>@Html.ActionLink("Prijava", "Prijava", "Korisnici")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.ToString("dd.MM.yyyy") - Servis Vozila</p>
            <p></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
