@using Paup_2021_ServisVozila.Models
@model List<MarkeAutomobili>
@{
    ViewBag.Title = "Popis marka automobila";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title</h2>

<a href="@Url.Action("DodajMarku", "MarkeAutomobili")" class="btn btn-block">
    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> Dodavanje nove marke
</a>

<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Marka</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var marka in Model)
        {
            <tr>
                <td>@marka.id</td>
                <td>@marka.Marke</td>
                <td>
                    @Html.ActionLink("Briši", "Brisi", new { id = marka.id }, new { @class = "btn btn-warning btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

