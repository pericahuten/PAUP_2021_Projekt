@using Paup_2021_ServisVozila.Models
@model Servisi
@{
    ViewBag.Title = "Detalji servisa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-3">
        <strong>Auto:</strong>
    </div>
    <div class="col-md-9">
        <strong>@(Model?.idAuto.Automobil)</strong>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <strong>VIN auta:</strong>
    </div>
    <div class="col-md-9">
        <strong>@Model.AutoID</strong>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <strong>Datum kreiranja:</strong>
    </div>
    <div class="col-md-9">
        @(Model?.DatumKreiranja.ToString("dd.MM.yyyy"))
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <strong>Datum početka servisa:</strong>
    </div>
    <div class="col-md-9">
        @(Model?.DatumPocetka.ToString("dd.MM.yyyy"))
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <strong>Datum završetka servisa:</strong>
    </div>
    <div class="col-md-9">
        @(Model?.DatumZavrsetka.ToString("dd.MM.yyyy"))
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <strong>Napomena vlasnika:</strong>
    </div>
    <div class="col-md-9">
        @Model.NapomenaVlasnika
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <strong>Napomena servisera:</strong>
    </div>
    <div class="col-md-9">
        <strong>@Model.NapomenServisera</strong>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <strong>kilometraža:</strong>
    </div>
    <div class="col-md-9">
        @Model.Kilometraza
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <strong>Serviser:</strong>
    </div>
    <div class="col-md-9">
        @Model.Serviser
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <strong>Status zahtjeva:</strong>
    </div>
    <div class="col-md-9">
        <strong>@(Model?.StatusId.StatusAutomobila)</strong>
    </div>
</div>

<br />

@Html.ActionLink("Povratak na popis servisa", "Popis", "Servis", null, new { @class = "btn btn-primary btn-sm" })